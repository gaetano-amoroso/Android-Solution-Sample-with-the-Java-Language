<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context=".GeoQuizActivity">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/cardview_dark_background"/>


    <Button
        android:id="@+id/true_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@color/green"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/true_button_text"
        android:textColor="@color/white"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/false_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text_view"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/red"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/false_button_text"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_prev"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/false_button"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/divider"
        android:backgroundTint="#878787"
        android:drawableEnd="@drawable/ic_twotone_arrow_left_48"
        android:drawablePadding="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/true_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/divider"
        android:backgroundTint="#878787"
        android:drawableLeft="@drawable/ic_twotone_arrow_right_48"
        android:drawablePadding="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/divider"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/true_button"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent" />


</RelativeLayout>
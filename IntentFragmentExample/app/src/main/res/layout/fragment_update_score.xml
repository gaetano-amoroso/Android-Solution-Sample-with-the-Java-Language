<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateScoreFragment"
    android:padding="15dp">
    <LinearLayout
        android:id="@+id/ll_container_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"

        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:labelFor="@+id/et_upload_score"
            />
        <EditText
            android:id="@+id/et_update_score_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#E0DFDF"
            android:inputType="text"
            android:padding="5dp">
            <requestFocus/>
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_container_row_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_below="@id/ll_container_row_name"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score Point"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/et_update_score_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#E0DFDF"
            android:inputType="text"
            android:padding="5dp">
        </EditText>
        <Button
            android:id="@+id/btn_update_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:text="UPDATE SCORE"
            android:backgroundTint="#656565"
            android:textSize="17sp"
            android:textStyle="bold"/>

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_Display_counter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hello World!"
            android:name="com.gaetanoamoroso.fragmenttofragmentcomunicationstatic.DisplayCounterFragment"
            tools:layout="@layout/fragment_display_counter"
            android:background="#777577"/>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_do_increment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hello World!"
            android:name="com.gaetanoamoroso.fragmenttofragmentcomunicationstatic.DoIncrementFragment"
            tools:layout="@layout/fragment_do_increment"
            android:background="#8DB16A"/>
    </LinearLayout>

</RelativeLayout>